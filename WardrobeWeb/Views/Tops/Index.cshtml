@model IEnumerable<WardrobeWeb.Models.Top>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@foreach (var item in Model)
{
    <row>
        <div class="col-xs-12, col-sm-12, col-md-6, col-lg-3">

            <h3>@Html.DisplayNameFor(model => model.TopName)</h3>
            @Html.DisplayFor(modelItem => item.TopName)
        </div>

        <div class="col-xs-12, col-sm-12, col-md-6, col-lg-3">
            <h3> @Html.DisplayNameFor(model => model.TopSize)</h3>
            @Html.DisplayFor(modelItem => item.TopSize)
        </div>

        <div class="col-xs-12, col-sm-12, col-md-6, col-lg-3">
            <h3> @Html.DisplayNameFor(model => model.TopSeason)</h3>
            @Html.DisplayFor(modelItem => item.TopSeason)
        </div>

        <div class="col-xs-12, col-sm-12, col-md-6, col-lg-3">
            <h3> @Html.DisplayNameFor(model => model.TopOccasion)</h3>
            @Html.DisplayFor(modelItem => item.TopOccasion)
        </div>
        <div class="col-xs-12, col-sm-12, col-md-6, col-lg-3">
            @Html.ActionLink("Edit", "Edit", new { id = item.TopID }) |
            @Html.ActionLink("Details", "Details", new { id = item.TopID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TopID })
        </div>

    </row>

    <row>
        <div class="col-xs-12, col-sm-12, col-md-12, col-lg-12">
            </div>
        </row>






            }


